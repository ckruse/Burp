<%= if assigns[:last_post] do %>
  <%= render("post.html", conn: @conn, post: @last_post, hide_comments: true) %>

  <h2 class="section-divider"><%= gettext("older articles") %></h2>

  <%= for post <- @posts do %>
    <%= render("post.html", conn: @conn, post: post, hide_body: true) %>
  <% end %>

<% else %>
  <%= gettext("Sorry, no posts found yet") %>
<% end %>
