<% content_for :title do %><%= t('admin.new post') %><% end %>

<h2><%= t('admin.new post') %></h2>

<%= form_for @post, url: admin_posts_path do |f| %>
  <%= render 'form', f: f %>

  <p>
    <%= f.submit t('admin.save'), class: 'btn btn-primary' %>
    <%= link_to t('admin.cancel'), admin_posts_path, class: 'btn btn-default' %>
  </p>

<% end %>
