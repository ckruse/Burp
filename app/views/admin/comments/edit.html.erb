<% content_for :title do %>Edit comment<% end %>

<h2>Edit comment</h2>

<%= form_for @comment, url: admin_comment_path(@comment), class: 'form-horizontal' do |f| %>

  <div class="form-group">
    <%= f.label :author, class: 'control-label' %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url, class: 'control-label' %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: 'control-label' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', admin_comments_path, class: 'btn btn-default' %>

<% end %>
