<% content_for :title do %>Comments<% end %>

  <div class="well comments">
    <h3>Last 10 Comments</h3>

    <%= form_tag admin_batch_action_path, class: 'container' do %>
    <% @comments.each do |c| %>
      <%= render 'comment', c: c, p: c.post %>
      <% end %>

      <p>
        <%= submit_tag 'Delete', name: 'delete', class: 'btn btn-default', data: {confirm: 'Are you sure?'} %>
        <%= submit_tag 'Show', name: 'show', class: 'btn btn-default' %>
        <%= submit_tag 'Hide', name: 'hide', class: 'btn btn-default' %>
      </p>
    <% end %>

  </div>
