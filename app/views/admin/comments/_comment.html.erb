<article data-comment-id="<%= c.id %>" class="comment row">
  <div class="col-md-1">
    <input type="checkbox" name="ids[]" value="<%= c.id %>">
  </div>

  <div class="col-md-11">
    <div class="container">
      <div class="row header">
        <div class="col-md-1">
          <img class="gravatar" src="<% if c.attrs.has_key?(:pavatar) %><%= c.attrs[:pavatar] %><% elsif c.attrs.has_key?(:gravatar) %>http://www.gravatar.com/avatar/<%= c.attrs[:gravatar] %>?s=80&amp;d=<%= image_path 'gravatar.jpg' %><% else %><%= image_path 'gravatar.jpg' %><% end %>" alt="<%= t('global.avatar') %>">
        </div>
        <div class="col-md-9">
          <h4><%= c.author %> <%= t('global.wrote') %></h4>
          <details><%= t('global.comments_at') %> <%= link_to comment_url(p, c) do %><time pubdate datetime="<%= c.created_at.strftime("%Y-%m-%dT%H:%M:%SZ") %>"><%= l(c.created_at) %></time><% end %> (<em><%= t('admin.' + (c.visible ? 'visible' : 'invisible')) %></em>)</details>

            <%= c.content.html_safe %>
        </div>
      </div>
    </div>

    <p class="actions">
      <%= link_to t('admin.delete'), admin_comment_path(c), method: :delete, class: 'btn btn-default', data: {confirm: t('admin.are you sure')} %>
      <%= link_to t('admin.edit'), edit_admin_comment_path(c), class: 'btn btn-default' %>

      <% if c.visible %>
        <%= link_to t('admin.hide'), admin_comment_hidden_path(c), method: :post, class: 'btn btn-default' %>
      <% else %>
        <%= link_to t('admin.show'), admin_comment_visible_path(c), method: :post, class: 'btn btn-default' %>
      <% end %>
    </p>
  </div>

</article>
