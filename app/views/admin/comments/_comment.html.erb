<article data-comment-id="<%= c.id %>" class="comment row">
  <div class="col-md-1">
    <input type="checkbox" name="ids[]" value="<%= c.id %>">
  </div>

  <div class="col-md-11">
    <div class="container">
      <div class="row header">
        <div class="col-md-1">
          <img class="gravatar" src="<% if c.attrs.has_key?(:pavatar) %><%= c.attrs[:pavatar] %><% elsif c.attrs.has_key?(:gravatar) %>http://www.gravatar.com/avatar/<%= c.attrs[:gravatar] %>?s=80&amp;d=<%= image_path 'gravatar.jpg' %><% else %><%= image_path 'gravatar.jpg' %><% end %>" alt="Gravatar">
        </div>
        <div class="col-md-9">
          <h4><%= c.author %> wrote</h4>
          <details>at <%= link_to comment_url(p, c), title: "permanent link to this comment" do %><time pubdate datetime="<%= c.created_at.strftime("%Y-%m-%dT%H:%M:%SZ") %>"><%= l(c.created_at) %></time><% end %> (<em><%= c.visible ? 'visible' : 'invisible' %></em>)</details>

            <%= c.content.html_safe %>
        </div>
      </div>
    </div>

    <p class="actions">
      <%= link_to 'Delete', admin_comment_path(c), method: :delete, class: 'btn btn-default', data: {confirm: 'Are you sure?'} %>
      <%= link_to 'Edit', edit_admin_comment_path(c), class: 'btn btn-default' %>

      <% if c.visible %>
        <%= link_to 'Hide', admin_comment_hidden_path(c), method: :post, class: 'btn btn-default' %>
      <% else %>
        <%= link_to 'Show', admin_comment_visible_path(c), method: :post, class: 'btn btn-default' %>
      <% end %>
    </p>
  </div>

</article>
