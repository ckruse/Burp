<h2>Media</h2>

<table class="table table-condensed table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>URL</th>
    <th>MIME-Type</th>
    <th> </th>
  </tr>

  <% @media.each do |m| %>
    <tr>
      <td><%= m.name %></td>
      <td><%= m.url %></td>
      <td><%= m.media_type %></td>
      <td>
        <%= link_to '', admin_medium_path(m), method: :delete, data: {confirm: 'Are you sure?'}, class: 'glyphicon glyphicon-trash' %>
      </td>
    </tr>
  <% end %>
</table>

  <%= will_paginate @posts, renderer: BootstrapPagination::Rails, next_label: '»', previous_label: '«' %>
